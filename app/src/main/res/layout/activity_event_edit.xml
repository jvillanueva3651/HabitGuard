<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.calendar.EventEditActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eventDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            tools:ignore="HardcodedText" /> <!-- eventDateTV -->

        <androidx.core.widget.NestedScrollView
            android:id="@+id/upperCardScroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eventDateTV">

            <androidx.cardview.widget.CardView
                android:id="@+id/upperCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"> <!-- upperCard -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <EditText
                            android:id="@+id/eventNameET"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autofillHints="title"
                            android:backgroundTint="@color/teal_200"
                            android:maxLength="35"
                            android:hint="Title for your event or transaction"
                            android:inputType="textCapSentences"
                            android:minHeight="48dp"
                            android:textColorHint="#757575"
                            tools:ignore="HardcodedText,RelativeOverlap" /> <!-- eventNameET -->

                        <ImageButton
                            android:id="@+id/btnToggleTransaction"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Toggle Transaction To Transaction"
                            android:src="@drawable/ic_event"
                            app:tint="#757575"
                            tools:ignore="HardcodedText" /> <!-- btnToggleTransaction -->
                    </RelativeLayout> <!-- eventNameET, btnToggleTransaction -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/eventButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/teal_700"
                            android:text="Event"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:alpha=".5"
                            tools:ignore="ButtonStyle,HardcodedText" /> <!-- eventButton -->

                        <Button
                            android:id="@+id/transactionButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/teal_700"
                            android:text="Transaction"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:ignore="ButtonStyle,HardcodedText" /> <!-- transactionButton -->
                    </LinearLayout> <!-- eventButton, transactionButton -->

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:id="@+id/timeRecyclerView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:visibility="invisible" >

                            <!-- Start Time Picker -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <NumberPicker
                                    android:id="@+id/startHourPicker"
                                    android:layout_width="48dp"
                                    android:layout_height="100dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:textSize="20sp"
                                    android:layout_gravity="center"
                                    tools:ignore="HardcodedText" />

                                <NumberPicker
                                    android:id="@+id/startMinutePicker"
                                    android:layout_width="48dp"
                                    android:layout_height="100dp" />
                            </LinearLayout> <!-- startHourPicker, startMinutePicker -->

                            <!-- Divider Arrow -->
                            <ImageView
                                android:id="@+id/timeDivider"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_gravity="center"
                                android:importantForAccessibility="no"
                                android:src="@drawable/ic_arrow_right"/>

                            <!-- End Time Picker -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <NumberPicker
                                    android:id="@+id/endHourPicker"
                                    android:layout_width="48dp"
                                    android:layout_height="100dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:textSize="20sp"
                                    android:layout_gravity="center"
                                    tools:ignore="HardcodedText" />

                                <NumberPicker
                                    android:id="@+id/endMinutePicker"
                                    android:layout_width="48dp"
                                    android:layout_height="100dp"/>
                            </LinearLayout> <!-- endHourPicker, endMinutePicker -->
                        </LinearLayout> <!-- timeRecyclerView, startHourPicker, startMinutePicker, endHourPicker, endMinutePicker -->

                        <LinearLayout
                            android:id="@+id/transactionType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$"
                                android:textSize="28sp"
                                android:layout_gravity="center"
                                tools:ignore="HardcodedText" > <!-- currency -->
                            </TextView> <!-- currency -->

                            <!-- Whole Number (Dollars) -->
                            <EditText
                                android:id="@+id/editTextDollars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="1,000,000,000"
                                android:importantForAutofill="no"
                                android:inputType="number"
                                android:digits="0987654321,"
                                android:maxLength="13"
                                android:textSize="16sp"
                                android:backgroundTint="@color/teal_700"
                                tools:ignore="HardcodedText" />

                            <!-- Decimal Separator (Static Text) -->
                            <TextView
                                android:id="@+id/editTextDecimalSeparator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="."
                                android:textSize="16sp"
                                tools:ignore="HardcodedText" />

                            <!-- Decimal (Cents) -->
                            <EditText
                                android:id="@+id/editTextCents"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="00"
                                android:importantForAutofill="no"
                                android:inputType="number"
                                android:digits="0987654321"
                                android:maxLength="2"
                                android:textSize="16sp"
                                android:backgroundTint="@color/teal_700"
                                tools:ignore="HardcodedText" />

                            <ImageButton
                                android:id="@+id/btnToggleIncome"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:scaleX="1.75"
                                android:scaleY="1.75"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Toggle Transaction Type"
                                android:src="@drawable/ic_income"
                                app:tint="#757575"
                                tools:ignore="HardcodedText" /> <!-- btnToggleIncome -->

                        </LinearLayout> <!-- transactionType, currency, editTextMoney, btnToggleIncome -->
                    </androidx.cardview.widget.CardView>

                    <!-- Recurrence Section -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <CheckBox
                                android:id="@+id/recurringCheckBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recurring Event"
                                android:textSize="16sp"
                                tools:ignore="HardcodedText" /> <!-- recurringCheckBox -->

                            <LinearLayout
                                android:id="@+id/recurrenceOptionsLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:layout_marginTop="8dp"> <!-- recurrenceOptionsLayout -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Repeat every:"
                                        android:textSize="16sp"
                                        tools:ignore="HardcodedText" />

                                    <EditText
                                        android:id="@+id/recurrenceInterval"
                                        android:layout_width="40dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="8dp"
                                        android:importantForAutofill="no"
                                        android:inputType="number"
                                        android:text="1"
                                        android:ems="1"
                                        tools:ignore="HardcodedText" /> <!-- recurrenceInterval -->

                                    <Spinner
                                        android:id="@+id/recurrenceFrequency"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:entries="@array/recurrence_frequencies"/> <!-- recurrenceFrequency -->
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ends:"
                                    android:textSize="16sp"
                                    android:layout_marginBottom="8dp"
                                    tools:ignore="HardcodedText" />

                                <RadioGroup
                                    android:id="@+id/recurrenceEndOptions"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"> <!-- recurrenceEndOptions -->

                                    <RadioButton
                                        android:id="@+id/endNever"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Never"
                                        android:checked="true"
                                        tools:ignore="HardcodedText" /> <!-- endNever -->

                                    <RadioButton
                                        android:id="@+id/endAfterOccurrences"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="After"
                                        tools:ignore="HardcodedText" /> <!-- endAfterOccurrences -->

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginStart="32dp"
                                        android:layout_marginBottom="8dp">

                                        <EditText
                                            android:id="@+id/occurrencesCount"
                                            android:layout_width="60dp"
                                            android:layout_height="wrap_content"
                                            android:importantForAutofill="no"
                                            android:inputType="number"
                                            android:enabled="false"
                                            android:ems="1"
                                            android:text="5"
                                            tools:ignore="HardcodedText,TooDeepLayout" /> <!-- occurrencesCount -->

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="occurrences"
                                            android:layout_marginStart="8dp"
                                            tools:ignore="HardcodedText" />
                                    </LinearLayout>

                                    <RadioButton
                                        android:id="@+id/endOnDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="On date"
                                        tools:ignore="HardcodedText" /> <!-- endOnDate -->

                                    <DatePicker
                                        android:id="@+id/recurrenceEndDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="32dp"
                                        android:calendarViewShown="false"
                                        android:datePickerMode="spinner"
                                        android:enabled="false"/> <!-- recurrenceEndDate -->
                                </RadioGroup> <!-- recurrenceEndOptions -->
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <EditText
                            android:id="@+id/eventLocationET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="location"
                            android:backgroundTint="@color/teal_200"
                            android:ems="10"
                            android:hint="Location"
                            android:inputType="textPostalAddress"
                            android:minHeight="48dp"
                            android:textColorHint="#757575"
                            tools:ignore="HardcodedText" /> <!-- eventLocationET -->

                        <ImageButton
                            android:id="@+id/map"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Go to Map"
                            android:src="@drawable/ic_map"
                            app:tint="#757575"
                            tools:ignore="HardcodedText" /> <!-- map -->
                    </RelativeLayout> <!-- eventLocationET, map -->

                    <!-- Save Button -->
                    <Button
                        android:id="@+id/saveEventAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/teal_700"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" /> <!-- saveEventAction -->
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/descriptionScroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upperCardScroll">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/descriptionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/messageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your message here..."
                        android:importantForAutofill="no"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:maxLines="10"
                        android:gravity="top|start"
                        android:scrollbars="vertical"
                        android:padding="16dp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>